---
export interface Props {
  category: {
    name: string;
    slug: string;
    description: string;
    icon_name: string;
    businessCount: number;
  };
}

const { category } = Astro.props;

import DynamicLucideIcon from './DynamicLucideIcon.jsx';
---

<a href={`/${category.slug}`} class="group block bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border border-gray-100">
  <div class="p-6">
    <div class="flex items-center justify-between mb-4">
      <div class="flex items-center space-x-4">
        <div class="bg-primary-700 text-white p-3 rounded-xl group-hover:bg-primary-800 transition-colors duration-200 shadow-md">
          <DynamicLucideIcon iconName={category.icon_name} className="w-8 h-8" client:load />
        </div>
        <div>
          <h3 class="font-semibold text-lg text-gray-900 group-hover:text-primary-700 transition-colors duration-200">{category.name}</h3>
          <p class="text-sm text-gray-600">{category.businessCount} businesses</p>
        </div>
      </div>
      <div class="bg-primary-700 text-white p-2 rounded-lg group-hover:bg-primary-800 transition-colors duration-200">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </div>
    </div>
    <p class="text-gray-700 text-sm leading-relaxed">{category.description}</p>
  </div>
</a>