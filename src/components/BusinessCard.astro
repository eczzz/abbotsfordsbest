---
export interface Props {
  business: {
    name: string;
    logo?: string;
    rating: number;
    bio: string;
    address: string;
    phone: string;
    email: string;
    website: string;
    mapUrl?: string;
  };
  variant?: 'featured' | 'compact' | 'minimal';
}

const { business, variant = 'featured' } = Astro.props;

const renderStars = (rating: number) => {
  const stars = [];
  for (let i = 1; i <= 5; i++) {
    stars.push(i <= rating ? '★' : '☆');
  }
  return stars.join('');
};
---

{variant === 'minimal' ? (
  <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 p-6 text-center">
    {/* Business Logo */}
    <div class="flex justify-center mb-4">
      {business.logo ? (
        <img src={business.logo} alt={`${business.name} logo`} class="max-w-[150px] h-auto object-contain" />
      ) : (
        <div class="w-32 h-20 bg-gray-200 rounded-lg flex items-center justify-center">
          <span class="text-gray-500 font-semibold text-sm">COMPANY LOGO</span>
        </div>
      )}
    </div>

    {/* Business Name */}
    <h3 class="font-semibold text-lg text-gray-900 mb-4">{business.name}</h3>

    {/* Contact Information */}
    <div class="space-y-2 mb-6">
      <div class="text-sm text-gray-700">
        {business.address}
      </div>
      <div class="text-sm text-gray-700">
        {business.phone}
      </div>
      <div class="text-sm text-gray-700">
        {business.email}
      </div>
    </div>

    {/* Website Button */}
    <a href={business.website} target="_blank" rel="nofollow noopener noreferrer" 
       class="inline-block bg-gray-100 text-gray-700 px-6 py-2 rounded-full border border-gray-300 hover:bg-gray-200 transition-colors duration-200 text-sm font-medium">
      Website
    </a>
  </div>
) : (
<div class={`bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 ${variant === 'featured' ? 'h-full' : ''}`}>
  {/* Business Header */}
  <div class="p-6">
    <div class="flex items-start justify-between mb-4">
      <div class="flex items-center space-x-4">
        {business.logo ? (
          <img src={business.logo} alt={`${business.name} logo`} class="w-16 h-16 rounded-lg object-cover bg-gray-100" />
        ) : (
          <div class="w-16 h-16 bg-gray-200 rounded-lg flex items-center justify-center">
            <span class="text-gray-500 font-semibold text-sm">LOGO</span>
          </div>
        )}
        <div>
          <h3 class="font-semibold text-xl text-gray-900">{business.name}</h3>
          <div class="flex items-center mt-1">
            <span class="text-yellow-400 text-lg" set:html={renderStars(business.rating)}></span>
            <span class="ml-2 text-sm text-gray-600">({business.rating}.0)</span>
          </div>
        </div>
      </div>
    </div>

    {/* Business Description */}
    <p class="text-gray-700 mb-4 leading-relaxed">{business.bio}</p>

    {/* Contact Information */}
    <div class="space-y-2 mb-4">
      <div class="flex items-center text-sm text-gray-600">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span>{business.address}</span>
      </div>
      <div class="flex items-center text-sm text-gray-600">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        <a href={`tel:${business.phone}`} class="hover:text-primary-700">{business.phone}</a>
      </div>
      <div class="flex items-center text-sm text-gray-600">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
        </svg>
        <a href={business.website} target="_blank" rel="noopener noreferrer" class="hover:text-primary-700 truncate">
          {business.website.replace('https://', '').replace('http://', '')}
        </a>
      </div>
    </div>

    {/* Action Buttons */}
    <div class="flex space-x-3">
      <a href={business.website} target="_blank" rel="noopener noreferrer" 
         class="flex-1 bg-primary-700 text-white px-4 py-2 rounded-xl text-center hover:bg-primary-800 transition-colors duration-200 text-sm font-medium">
        Visit Website
      </a>
      <a href={`tel:${business.phone}`} 
         class="flex-1 border border-primary-700 text-primary-700 px-4 py-2 rounded-xl text-center hover:bg-primary-50 transition-colors duration-200 text-sm font-medium">
        Call Now
      </a>
    </div>
  </div>

  {/* Map Section */}
  {variant === 'featured' && (
    <div class="h-48 bg-gray-100 relative overflow-hidden rounded-b-2xl">
      <div class="absolute inset-0 flex items-center justify-center">
        <!-- Map placeholder with location pin -->
        <img src="https://images.pexels.com/photos/2662116/pexels-photo-2662116.jpeg?auto=compress&cs=tinysrgb&w=400&h=200" 
             alt="Business location map" 
             class="w-full h-full object-cover opacity-60" />
        <div class="absolute inset-0 bg-primary-700 bg-opacity-20"></div>
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="bg-red-500 text-white p-2 rounded-full shadow-lg">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  )}
</div>
)}