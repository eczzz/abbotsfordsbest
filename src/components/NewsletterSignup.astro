<section class="bg-gray-100 py-16">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl font-bold text-gray-900 mb-4">Join Our Community</h2>
    <p class="text-gray-600 mb-8 max-w-2xl mx-auto">
      Stay updated with the latest businesses, featured listings, and community news in Abbotsford.
    </p>
    
    <div class="max-w-md mx-auto">
      <form class="flex space-x-3">
        <input 
          type="email" 
          placeholder="Enter your email" 
          required
          class="flex-1 px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
        />
        <button 
          type="submit"
          class="bg-primary-700 text-white px-8 py-3 rounded-xl hover:bg-primary-800 transition-colors duration-200 font-medium whitespace-nowrap"
        >
          Join Community
        </button>
      </form>
      <p class="text-xs text-gray-500 mt-3">
        We respect your privacy. Unsubscribe at any time.
      </p>
    </div>
  </div>
</section>