        <a href="/list-business" class="block hover:text-primary-200 px-3 py-2">Add Business</a>
        {isAdmin && (
          <>
            <a href="/admin/submissions" class="block hover:text-primary-200 px-3 py-2">Admin Panel</a>
            <a href="/admin/categories" class="block hover:text-primary-200 px-3 py-2">Admin Categories</a>
