            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
import { supabase } from '../lib/supabaseClient.js';

document.addEventListener('DOMContentLoaded', () => {
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  const logoutButtons = [
    document.getElementById('logout-btn'),
    document.getElementById('mobile-logout-btn')
  ].filter(Boolean);

  const handleLogout = async (event) => {
    event.preventDefault();

    try {
      if (supabase?.auth?.signOut) {
        const { error } = await supabase.auth.signOut();
        if (error) {
          console.error('Error signing out on client:', error);
        }
      }
    } catch (error) {
      console.error('Unexpected error during client sign out:', error);
    }

    try {
      const response = await fetch('/api/auth/set-session', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ event: 'SIGNED_OUT' })
      });

      if (!response.ok) {
        const errorText = await response.text().catch(() => '');
        console.error('Failed to synchronize sign-out with server:', errorText || response.statusText);
      }
    } catch (error) {
      console.error('Failed to synchronize sign-out with server:', error);
    }

    window.location.href = '/admin/login';
  };

  logoutButtons.forEach((button) => {
    button.addEventListener('click', handleLogout);
  });
});
</script>
