---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import SearchBar from '../components/SearchBar.jsx';
import FeaturedBusinessCard from '../components/FeaturedBusinessCard.astro';
import CategoryCard from '../components/CategoryCard.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
import Footer from '../components/Footer.astro';
import { getSupabase } from '../lib/supabaseClient.js';

// Sample data - in a real app this would come from a database
const featuredBusinesses = [
  {
    name: "Ocean Park Auto",
    logo: "https://images.pexels.com/photos/3184356/pexels-photo-3184356.jpeg?auto=compress&cs=tinysrgb&w=400",
    description: "More than just auto repairs! We've been providing high-quality automotive services since 1995. Located in central Abbotsford.",
    website: "https://oceanparkauto.com",
    category: "AUTO GLASS"
  },
  {
    name: "Leading Real Estate Pro",
    logo: "https://images.pexels.com/photos/5668838/pexels-photo-5668838.jpeg?auto=compress&cs=tinysrgb&w=400",
    description: "Leading the Abbotsford real estate market with expertise and dedication. Your trusted partner in property investments.",
    website: "https://example.com",
    category: "REAL ESTATE SERVICE"
  },
  {
    name: "Harder Power Co.",
    logo: "https://images.pexels.com/photos/159358/construction-site-build-construction-work-159358.jpeg?auto=compress&cs=tinysrgb&w=400",
    description: "If you have been looking around for electrical & networking, look no further than Harder Power Co. for all your power needs.",
    website: "https://harderpowerco.com",
    category: "ELECTRICAL"
  }
];

// Fetch featured categories from database (limit to 5 for homepage)
const supabase = getSupabase(Astro);
const { data: categoryPages, error: categoriesError } = await supabase
  .from('category_pages')
  .select('*')
  .order('created_at')
  .limit(5);

if (categoriesError) {
  console.error('Error fetching categories:', categoriesError);
}

// Transform category pages to match the expected format
const categories = categoryPages ? categoryPages.map((category) => {
  return {
    name: category.category_name,
    slug: category.slug,
    description: category.description,
    icon_name: category.icon_name || 'Building',
    businessCount: Math.floor(Math.random() * 50) + 10 // Random count for now
  };
}) : [];
---

<Layout title="Abbotsford's Best - Discover The Best Businesses in Abbotsford, BC">
  <Header />
  
  <!-- Hero Section -->
  <section class="relative bg-gray-900 text-white overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img src="https://images.pexels.com/photos/3184465/pexels-photo-3184465.jpeg?auto=compress&cs=tinysrgb&w=1200" alt="Business background" class="w-full h-full object-cover opacity-60" />
      <div class="absolute inset-0 bg-black bg-opacity-50"></div>
    </div>
    
    <!-- Decorative "Yes, We're Open" text -->
    <div class="absolute top-8 right-8 text-6xl font-bold text-white/10 transform rotate-12 select-none">
      Yes, We're<br/>Open
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-28">
      <div class="text-center">
        <h1 class="text-5xl lg:text-7xl font-bold mb-6 leading-tight">
          The Best Abbotsford Has to Offer.
        </h1>
        
        <p class="text-xl text-gray-200 mb-8 max-w-3xl mx-auto leading-relaxed">
          At Abbotsford's Best, we're committed to showcasing the city's finest businesses and helping local entrepreneurs grow with useful information. Our mission is simple: to connect you with the best services, vendors, and professionals Abbotsford has to offer.
        </p>
        
        <div class="max-w-2xl mx-auto">
          <SearchBar client:load placeholder="Our Services & Professionals" />
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Businesses Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {featuredBusinesses.map((business) => (
          <FeaturedBusinessCard business={business} />
